<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_7sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtinformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country Information"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="@dimen/_20sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_9sdp">

            <ImageView
                android:id="@+id/imgflag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/_7sdp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtcountryname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:layout_margin="@dimen/_20sdp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Capital "
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtcapital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capital"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Region"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtregion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Asia"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Subregion"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtsubregion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Southern Asia"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Native Name"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtnativename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="भारत"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Population"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtpopulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123456789"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Area"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3287590.0"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nationality"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdemonym"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Indian"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Borders"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtbordes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="pak\n shree lanka\n bhutan\n afg\n nepal "
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Independent"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_7sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtindependent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="true"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time Zone"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttimezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UTC+05:30"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Languages"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtlanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hindi\n english"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Domain"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdomain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=".in"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f5f9"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Calling code"
                android:layout_weight="2"
                android:textSize="@dimen/_15sdp"
                android:textColor="#343D44"
                android:background="#c9d6df"
                android:gravity="left|center"
                android:paddingLeft="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtcallingcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="91"
                android:textSize="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>



    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>